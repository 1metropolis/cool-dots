# Exit if not running interactively
if [[ ! -o interactive ]]; then
    return
fi

# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -e
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/metro/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# better ls
alias la='eza -a --icons'
alias ll='eza -lbF --git --icons'
alias ls='eza --icons'
alias tree='eza --tree --level=2 --icons'

# Pressing ctrl delete or ctrl backspace deletes by word
bindkey '^H' backward-kill-word
bindkey '^[[3;5~' kill-word

# Pressing ctrl+arrow skips by word
bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word



# Check the terminal type
if [[ "$TERM" != "xterm-256color" ]]; then
    # Specific prompt for Linux console (tty)
    PROMPT='%F{green}%n@%m%f:%F{green}%~%f$ '
    return
fi

# terminal start text
pokemon-colorscripts --no-title -rn dragonair,milotic,zeraora,charizard,flareon,vaporeon,jolteon,umbreon,espeon,glaceon,leafeon,sylveon,gengar,lucario,lugia,mimikyu,flygon,absol,greninja,garchomp,tyranitar,mew,lurantis,typhlosion,decidueye,ninetales

# version and info
#echo "Welcome to \u001b[36m$(cat /etc/os-release | grep PRETTY_NAME | cut -d'=' -f2 | tr -d '"')\u001b[0m"
echo "Welcome to $(cat /etc/os-release | grep PRETTY_NAME | cut -d'=' -f2 | tr -d '"')"
echo "Current date-time is $(echo $(date +'%B %d, %Y %H:%M:%S'))"

# run starship prompt
eval "$(starship init zsh)"


